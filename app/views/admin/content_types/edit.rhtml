<h1><%= figure_out_action(@type) %> Content Type</h1>

<% form_tag({ :action => 'edit', :id => @type }) do -%>

	<%= hidden_field_tag "referer", params[:referer] || request.env['HTTP_REFERER'] %>
	<%= error_messages_for 'type' %>
	<div class="subContent">
		<fieldset class="oneline">
			<label for="content_type_name">Name</label>
			<%= text_field 'type', 'name' , :class => "large_text_input", :size => "30" %>
		</fieldset>
		<fieldset class="oneline">
			<label for="content_type_config">Acts As:</label>
			<%= select 'type', 'core_content_type', AppConfig[:content_types].sort, :include_blank => true  %><br/>
		</fieldset>
		<fieldset class="oneline">
			<label for="content_extra_info">Extra Info:</label>
			<%= text_field 'type', 'extra_info' %><br/>
		</fieldset>
		<fieldset class="oneline">
			<label for="content_hidden">Hidden?</label>
			<%= check_box 'type', 'hidden' %><br/>
		</fieldset>
		<fieldset class="oneline">
			<label for="content_websites">Hide Websites?</label>
			<%= check_box 'type', 'hide_websites' %><br/>
		</fieldset>
		<fieldset class="oneline">
			<label for="content_tags">Hide Tags?</label>
			<%= check_box 'type', 'hide_tags' %><br/>
		</fieldset>
		<fieldset class="oneline">
			<label for="content_relations">Hide Relations?</label>
			<%= check_box 'type', 'hide_relations' %><br/>
		</fieldset>
		<fieldset class="oneline">
			<label for="content_tags">Hide Comments?</label>
			<%= check_box 'type', 'hide_comments' %><br/>
		</fieldset>
		<fieldset class="oneline">
			<label for="content_tags">Hide Imageuploads?</label>
			<%= check_box 'type', 'hide_imageuploads' %><br/>
		</fieldset>
		<fieldset class="oneline">
			<label for="content_type_description">Description</label>
			<%= text_area 'type', 'description' , :class => "large_text_input", :size => "30" %>
		</fieldset>
		<div class="bottom"></div>
	</div>

	<div class="bottomButton">
		<ul class="mainNav">
			<li><%= link_to 'Save Changes', "#", :class => "save-big", :onclick => "$$('form')[0].submit(); return false;" %></li>
			<li><%= link_to 'Back', params[:referer] || request.env['HTTP_REFERER'], :class => "back" %></li>
		</ul>
	</div>
	<div class="clear"></div>

<% end -%>
